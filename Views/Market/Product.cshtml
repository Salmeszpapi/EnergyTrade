@{
    ViewBag.Title = "Product";
}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6" style="min-width:380px">
                    <div class="white-box text-center"><img src="@ViewBag.ImgSrc" class="img-responsive" style="max-width: 380px; max-height: 600px"></div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <h3 class="box-title mt-5">General Info</h3>
                        <div class="table-responsive">
                            <table class="table table-striped table-product">
                                <tbody>
                                    <tr>
                                        <td width="390">Brand</td>
                                        <td>@Model.Brand.Name</td>
                                    </tr>
                                    <tr>
                                        <td>Coffein</td>
                                        <td>@Model.Coffein</td>
                                    </tr>
                                    <tr>
                                        <td>Sugar</td>
                                        <td>@Model.Sugar</td>
                                    </tr>
                                    <tr>
                                        <td>Size</td>
                                        <td>@Model.Size</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <h2 class="mt-5">
                        @if (@Model.Price == 0)
                        {
                            <h2>Not estimated<small class="text-success"> (Free traid fee)</small></h2>
                        }
                        else
                        {
                            <h2>$@Model.Price<small class="text-success"> (Free traid fee)</small></h2>
                        }

                    </h2>
                    <button class="buy-1" onclick="location.href='../../Trade?Id=@ViewBag.User'">Buy Now</button>
                    <button class="btn btn-primary btn-rounded">Buy Now</button>
                    <h3 class="box-title mt-5">Total watched: @Model.Seen</h3>

                </div>
                
            </div>
        </div>
    </div>
</div>