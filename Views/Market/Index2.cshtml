@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-center align-items-center mt-5"> <button class="btn btn-dark">OUR CATEGORIES</button> </div>
<div class="d-flex justify-content-center mt-3"> <span class="text text-center">Finding Best Products Now<br> in Your Fingertips</span> </div>
<div class="row mt-2 g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card p-1">
                <div class="d-flex justify-content-between align-items-center p-2">
                    <div class="flex-column lh-1 imagename"> <span>@item.Brand.Name</span> <span>@item.Name</span> </div>
                    <div> <img src="@item.Image" height="100" width="100" /> </div>
                    @*<a class="link-primary" href="@Url.Content("~/Market/UserProfile/?id=" + item.UserID)">click here</a>*@
                </div>
            </div>
        </div>
    }
</div>
