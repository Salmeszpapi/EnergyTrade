                </div>
            </div>

            <!-- cards -->
            <div class="details">
                <!-- order details list -->
                <div class="recentOrders">
                    <div class="cardHeader">
                        <h2>@pageName</h2>
                    </div>
                    <div class="container body-content">
                        @RenderBody()
                        <hr />
                        <footer>
                            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                        </footer>
                    </div>

                    @RenderSection("scripts", required: false)
                </div>

                <!-- New Customers -->
